<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_30"
        android:paddingLeft="@dimen/dp_30"
        android:paddingEnd="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30">

        <TextView
            android:id="@+id/operation_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/operation_state_tv"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="@dimen/sp_18" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_30"
        android:paddingLeft="@dimen/dp_30"
        android:paddingEnd="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30">

        <com.bsoft.common.view.roundview.RoundTextView
            android:id="@+id/operation_department_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_3"
            android:paddingEnd="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_3"
            android:textColor="@color/main"
            android:textSize="@dimen/sp_18"
            app:rv_cornerRadius="@dimen/dp_30"
            app:rv_strokeColor="@color/main"
            app:rv_strokeWidth="@dimen/dp_1" />

        <TextView
            android:id="@+id/operation_time_tv"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/sp_18" />

    </LinearLayout>


</LinearLayout>
