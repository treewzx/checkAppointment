<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_10">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/check_request_no_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/appointment_request_no_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:gravity="center"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:id="@+id/patient_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/pay_state_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_1"
            android:gravity="right"
            android:text="未支付"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>

    <TextView
        android:id="@+id/appointment_item_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_10"
        android:text="预约项目"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/appointment_time_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_10"
        android:text="预约时间"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/check_address_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_10"
        android:text="检查地点"
        android:textSize="@dimen/sp_15" />


    <TextView
        android:id="@+id/note_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_10"
        android:text="注意事项"
        android:textSize="@dimen/sp_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#eeeeee" />

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="right"
        android:padding="@dimen/dp_6">

        <com.bsoft.common.view.roundview.RoundTextView
            android:id="@+id/appointment_cancel_tv"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_25"
            android:gravity="center"
            android:text="取消"
            android:textColor="@android:color/holo_orange_dark"
            app:rv_cornerRadius="@dimen/dp_3"
            app:rv_strokeColor="@android:color/holo_orange_dark"
            app:rv_strokeWidth="@dimen/dp_1" />

        <com.bsoft.common.view.roundview.RoundTextView
            android:id="@+id/appointment_sign_tv"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center"
            android:text="签到"
            android:textColor="@color/main"
            app:rv_cornerRadius="@dimen/dp_3"
            app:rv_strokeColor="@color/main"
            app:rv_strokeWidth="@dimen/dp_1" />

        <com.bsoft.common.view.roundview.RoundTextView
            android:id="@+id/appointment_change_tv"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center"
            android:text="改约"
            android:textColor="@color/main"
            app:rv_cornerRadius="@dimen/dp_3"
            app:rv_strokeColor="@color/main"
            app:rv_strokeWidth="@dimen/dp_1" />

        <com.bsoft.common.view.roundview.RoundTextView
            android:id="@+id/appointment_pay_tv"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center"
            android:text="支付"
            android:textColor="@android:color/white"
            app:rv_backgroundColor="@color/main"
            app:rv_cornerRadius="@dimen/dp_3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sign_sequence_no_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sign_current_no_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="当前号码"
            android:textSize="@dimen/sp_15" />

        <View
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="@dimen/dp_30"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/sign_sequence_no_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我的号码"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

</LinearLayout>
