<resources>

    <!-- Base application theme. -->
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="DialogTheme" parent="@style/Theme.AppCompat.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!--是否浮在activity上-->
        <item name="android:windowIsFloating">true</item>
        <!--半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--透明背景-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--无标题-->
        <item name="android:windowNoTitle">true</item>
        <!--对话框背景变暗-->
        <item name="android:backgroundDimEnabled">true</item>

    </style>

    <style name="dialog_from_bottom_anim">
        <item name="android:windowEnterAnimation">@anim/base_popupwindow_bottom_to_top</item>
        <item name="android:windowExitAnimation">@anim/base_popupwindow_top_to_bottom</item>
    </style>


</resources>
